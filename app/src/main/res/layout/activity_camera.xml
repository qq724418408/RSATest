<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:popupbtn="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.forms.wjl.rsa.view.PopupButton
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:button="@null"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="区域"
                android:textColor="@drawable/selector_check_box_text_color"
                android:textSize="18sp"
                popupbtn:normalBg="@color/colorWhite"
                popupbtn:normalIcon="@mipmap/btn_arrow_down"
                popupbtn:pressBg="@color/colorWhite"
                popupbtn:pressIcon="@mipmap/btn_arrow_up" />
        </FrameLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@color/colorLine" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.forms.wjl.rsa.view.PopupButton
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:button="@null"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="种类"
                android:textColor="@drawable/selector_check_box_text_color"
                android:textSize="18sp"
                popupbtn:normalBg="@color/colorWhite"
                popupbtn:normalIcon="@mipmap/btn_arrow_down"
                popupbtn:pressBg="@color/colorWhite"
                popupbtn:pressIcon="@mipmap/btn_arrow_up" />
        </FrameLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/btnCamera"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="拍照" />
    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/tvTest1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_select_green_bg"
            android:button="@null"
            android:gravity="center"
            android:text="特别推荐"
            android:textColor="@drawable/selector_check_box_text_color" />

        <RadioButton
            android:id="@+id/tvTest2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:background="@drawable/shape_select_green_bg"
            android:button="@null"
            android:gravity="center"
            android:text="附近"
            android:textColor="@drawable/selector_check_box_text_color" />
    </RadioGroup>


    <ImageView
        android:id="@+id/ivPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vpSimple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:overScrollMode="never">

        <android.support.v4.view.PagerTabStrip
            android:id="@+id/ptsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top" />
    </android.support.v4.view.ViewPager>
</LinearLayout>
